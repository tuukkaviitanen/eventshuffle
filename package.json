{
  "name": "app",
  "version": "1.0.50",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./build --minify",
    "lint:fix": "eslint --fix",
    "lint:check": "eslint",
    "format:fix": "prettier . --write",
    "format:check": "prettier . --check",
    "docker:dev": "prisma migrate deploy && bun run dev",
    "docker:prod": "prisma migrate deploy && bun run index.js"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "elysia": "1.3.5",
    "prisma": "^6.10.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "bun-types": "1.2.16",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "prettier": "3.6.0",
    "typescript-eslint": "^8.34.1"
  },
  "module": "src/index.js"
}
